<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_250"
    android:layout_centerInParent="true"
    android:background="#F2F4F5"
    android:layout_marginBottom="@dimen/size_8"
    android:layout_marginLeft="@dimen/size_15"
    android:layout_marginRight="@dimen/size_15"
    android:layout_marginTop="@dimen/size_8"
    card_view:cardCornerRadius="@dimen/size_12"
    card_view:cardElevation="@dimen/size_5"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <ImageView
            android:id="@+id/item_menu_info_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_5"
            android:layout_toLeftOf="@+id/item_menu_control_layout"
            android:layout_above="@+id/item_menu_info_layout"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/item_menu_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_menu_info_image"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/item_menu_info_image"

            android:orientation="vertical">

            <TextView
                android:id="@+id/item_menu_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_menu_info_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="￦ 2,000원"
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_menu_control_layout"
            android:layout_width="@dimen/size_50"

            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/size_40"
            android:paddingTop="@dimen/size_40">

            <LinearLayout
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"

                android:layout_toLeftOf="@+id/item_menu_control_add"
                android:background="#C3C8CD"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout


                android:id="@+id/item_menu_control_add"
                android:layout_width="@dimen/size_49"
                android:layout_height="@dimen/size_49"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:gravity="center">

                <ImageButton
                    android:id="@+id/item_menu_control_add_btn"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:background="@xml/xml_icon_add_bg" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_menu_control_count"
                android:layout_width="@dimen/size_49"
                android:layout_height="match_parent"
                android:layout_above="@+id/item_menu_control_remove"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_menu_control_add"
                android:gravity="center"
                android:text="0"
                android:textColor="#3D454C"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <LinearLayout


                android:id="@+id/item_menu_control_remove"
                android:layout_width="@dimen/size_49"
                android:layout_height="@dimen/size_49"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"

                android:gravity="center">

                <ImageButton
                    android:id="@+id/item_menu_control_remove_btn"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:background="@xml/xml_icon_remove_bg" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

