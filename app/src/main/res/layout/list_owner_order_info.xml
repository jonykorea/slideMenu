<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_5">

    <ImageView
        android:layout_marginLeft="@dimen/size_15"
        android:id="@+id/row_store"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/icon_owner_receipt" />

    <LinearLayout
        android:layout_above="@+id/row_bottom_layout"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_toRightOf="@id/row_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/row_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="주문자 : "
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <TextView
                android:id="@+id/row_name"
                android:layout_toRightOf="@id/row_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/row_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="주문시간 : "
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <TextView
                android:id="@+id/row_time"
                android:layout_toRightOf="@id/row_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/row_arrive_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="도착예정시간 : "
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <TextView
                android:id="@+id/row_arrive_time"
                android:layout_toRightOf="@id/row_arrive_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/row_distance_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="거리정보 : "
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <TextView
                android:id="@+id/row_distance"
                android:layout_toRightOf="@id/row_distance_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/row_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_10"
            android:id="@+id/row_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="아메리카노, 까페라떼, 빙수"
            android:textColor="#3D454C"
            android:textSize="@dimen/size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/row_status_ing"
                    android:background="@drawable/icon_btn_bg_n"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="만들기"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textColor="#349BCD"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_status_finish"
                    android:background="@drawable/icon_btn_bg_n"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="준비완료"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textColor="#349BCD"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_bottom_layout"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_alignParentBottom="true"
        android:background="#C3C8CD"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>