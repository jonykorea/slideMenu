<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawerFragment">

    <ListView
        android:id="@+id/menu_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_setting"
        android:background="#1F2226"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:id="@+id/menu_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65.5"
        android:layout_alignParentBottom="true"
        android:background="#1F2226">

        <ImageView
            android:layout_marginLeft="@dimen/size_10"
            android:background="@drawable/icon_coffecup_white"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/size_29.5"
            android:layout_height="@dimen/size_29.5"/>

        <Button
            android:layout_marginLeft="@dimen/size_10"
            android:id="@+id/menu_btn_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1F2226"
            android:textColor="#909AA1"
            android:textSize="@dimen/size_25"
            android:gravity="left|center_vertical"
            android:text="Settings" />

    </LinearLayout>





</RelativeLayout>
