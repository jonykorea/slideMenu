<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8"
            android:background="#ffffff"
            android:orientation="vertical"></LinearLayout>

        <com.tws.widget.CuzTextView
            android:id="@+id/header_recent_top"

            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"

            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center_vertical|left"
            android:text="@string/orderlist_recent"
            android:textColor="#F9872B"
            android:textSize="@dimen/size_16"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tws.widget.CuzTextView
                    android:id="@+id/header_recent_row_store"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_30"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3D454C"
                    android:textSize="@dimen/size_16" />


                <com.tws.widget.CuzTextView
                    android:id="@+id/header_recent_row_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_30"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3D454C"
                    android:textSize="@dimen/size_16" />

            </RelativeLayout>

            <com.tws.widget.CuzTextView

                android:id="@+id/header_recent_row_key"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />

            <com.tws.widget.CuzTextView

                android:id="@+id/header_recent_row_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:gravity="left|center_vertical"
                android:text=""
                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />


            <com.tws.widget.CuzTextView
                android:id="@+id/header_recent_row_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"

                android:gravity="left|center_vertical"

                android:textColor="#3D454C"
                android:textSize="@dimen/size_16" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/header_recent_bottom"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/header_recent_row_status_ready"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_bg_n"
                android:orientation="horizontal">

                <com.tws.widget.CuzTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_14"
                    android:text="@string/status_ready"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_recent_row_status_ing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_bg_n"
                android:orientation="horizontal">

                <com.tws.widget.CuzTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_14"
                    android:text="@string/status_cooking"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_recent_row_status_finish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_bg_n"
                android:orientation="horizontal">

                <com.tws.widget.CuzTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_14"
                    android:text="@string/status_takeout"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_recent_cancel"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.tws.widget.CuzTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center"
                android:text="@string/order_cancel_info"
                android:textColor="#E52A19"

                android:textSize="@dimen/size_14"
                android:textStyle="bold" />

            <com.tws.widget.CuzButton
                android:id="@+id/header_recent_cancel_btn"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_20"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/size_5"
                android:background="@xml/xml_icon_btn_bg"
                android:text="@string/order_cancel"
                android:textColor="#E52A19"
                android:textSize="@dimen/size_14"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>
</FrameLayout>
